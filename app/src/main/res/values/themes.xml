<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.JetpackMVVM" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <item name="android:letterSpacing">0</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_baseline_arrow_back_ios_24</item>

        <!-- Font -->
        <item name="android:buttonStyle">@font/lato</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="fontFamily">@font/lato</item> <!-- target android sdk versions < 26 and > 14 if theme other than AppCompat -->
    </style>

    <style name="ToolbarNoPadding" parent="Base.ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="contentInsetStart">0dp</item>
        <item name="android:contentInsetStart">0dp</item>
    </style>
</resources>